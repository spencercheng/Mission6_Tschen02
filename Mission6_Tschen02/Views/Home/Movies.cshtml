@{
    ViewData["Title"] = "List of Movies";
}
@model List<ApplicationResponse>

<!-- Table for Listing out movies-->

<table class="table table-bordered table-striped">

    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>TItle</td>
            <td>Year</td>
            <td>Director</td>
            <td> Rating</td>
            <td>Edited</td>
            <td>LentTo</td>
            <td>Notes</td>

        </tr>
    </thead>
    <tbody>
        <!-- Prints out the movies from database.-->
        @foreach (var x in Model)
        {
        <tr>
            <td>
                @x.Category.CategoryName
            </td>
            <td>
                @x.Title
            </td>
            <td>
                @x.Year
            </td>
            <td>
                @x.Director
            </td>
            <td>
                @x.Rating
            </td>
            <td>
                @x.Edited
            </td>
            <td>
                @x.LentTo
            </td>
            <td>
                @x.Notes
            </td>

            <td>
            <a asp-controller="Home" asp-action="Edit" asp-route-applicationId="@x.ApplicationId">Edit</a>
        </td>

        <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationId="@x.ApplicationId">Delete</a> </td>

        </tr>
        }

    </tbody>


</table>