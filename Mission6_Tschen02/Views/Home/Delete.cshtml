

@{
    ViewData["Title"] = "Deleting Movie";
}
@model ApplicationResponse
<!-- Deletes Movie List-->
<h2> Confirm Deletion</h2>
<h3> Are you sure you want to delete the movie @Model.Title?</h3>
<br />
<form method="post">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Movies" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="ApplicationId"/>
</form>

